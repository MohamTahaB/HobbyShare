<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfileFragment"
    android:orientation="vertical"
    android:id="@id/message_fragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Cynthia"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="center|left"
            android:text="@string/cynthia"
            android:textColor="#4975F2"
            android:textSize="42sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="#EDE9E9"
            android:ems="10"
            android:gravity="start|top"
            android:padding="10dp"
            android:shadowColor="#0C0C0C"
            android:text="@string/hello_comment_a_va_ca_te_dit_une_partie_de_scrabble"
            android:textColor="#0C0C0C"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/answer"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="140dp"
            android:layout_marginVertical="20dp"
            android:background="#EDE9E9"
            android:ems="10"
            android:gravity="start|top"
            android:padding="10dp"
            android:shadowColor="#0C0C0C"
            android:text="Salut, avec plaisir !"
            android:textColor="#0C0C0C"
            android:textSize="25sp"
            />

        <EditText
            android:id="@+id/text_message"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="150dp"
            android:gravity="center_horizontal"
            android:hint="Ã©crivez un message..."
            android:textColor="#4975F2"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.212"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.132" />

    </LinearLayout>


</FrameLayout>